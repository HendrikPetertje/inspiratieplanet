<%= form_for(@article ) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :autofocus => true, :placeholder => "Titel" %>
  </div>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols => 70, :rows => 10, :placeholder => "Inhoud" %>
  </div>

  <div class="field">
    <%= f.file_field :picture %>
  </div>

  <div class="field">
    <%= f.text_field :tags, :placeholder => "Tags" %>
  </div>

  <div class="field">
    <%= f.label :categorien %><br />
    <%= collection_select :article, :category_id, @categories, :id, :title %>
  </div>

  <div class="actions">
    <%= f.submit "verstuur" %>
  </div>

<% end %>
