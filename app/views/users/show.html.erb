<% provide(:title, @user.name) %>

		<div class="container tophead">
			<div class="rightblock logout">
				<%= button_to 'Afmelden', '/logout', :method => "delete", :class => 'boven corner', :id => 'btn_registeren' %>
			</div>
			<div class="rightblock messagesbutton">
				<a href="#"><img src="/images/messagesbutton.png" alt=""></a>
			</div>
			<div class="rightblock optionsbutton">
				<%= link_to "Settings", edit_user_path(current_user) %>
			</div>
			<div class="rightblock headeruserfield">
				<%= @user.name %>
			</div>
			<div class="cleardiv"></div>
		</div>

		<div class="container userdash-top">
			
			<div class="leftblock avatarblock">
				<%= gravatar_for @user %>
			</div>
			
			<div class="leftblock userinfo-container">
				<div class="userinfo-name">
					<%= @user.name %>
				</div>
				<div class="userinfo-place" onclick="placearticle()">
					Artikel plaatsen
				</div>

			</div>

			<div class="rightblock welcometext">
				Welkom op jouw profielpagina!<br/>
 				<br />
				Maak je eigen artikelen<br/>
				Verzamel artikelen in je funbox<br/>
			</div>

			<div class="cleardiv"></div>
		</div>